<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00a0b0"
    tools:context=".Settings" >

     <include
        android:id="@+id/nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/nav_bar" />

     

     <TextView
         android:id="@+id/heading1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/like"
         android:layout_alignParentTop="true"
         android:layout_marginTop="21dp"
         android:text="Filter for words:"
         android:textAppearance="?android:attr/textAppearanceMedium" />
     
       <Switch
           android:id="@+id/um"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/like"
           android:layout_alignRight="@+id/like"
           android:layout_below="@+id/like"
           android:checked="true"
           android:text="Um" />

     <Switch
         android:id="@+id/like"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_alignRight="@+id/nav_bar"
         android:layout_marginTop="43dp"
         android:text="Like" />

      <Switch
          android:id="@+id/er"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/um"
          android:layout_alignRight="@+id/um"
          android:layout_below="@+id/um"
          android:checked="true"
          android:text="Er" />

      <Switch
          android:id="@+id/uh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/er"
          android:layout_alignRight="@+id/er"
          android:layout_below="@+id/er"
          android:checked="true"
          android:text="Uh" />

      <Switch
          android:id="@+id/youKnow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/uh"
          android:layout_alignRight="@+id/uh"
          android:layout_below="@+id/uh"
          android:text="You Know" />

</RelativeLayout>
